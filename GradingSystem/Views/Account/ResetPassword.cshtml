@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Reset Password";
}

<div class="login-page d-flex justify-content-center align-items-center vh-100">
    <div class="login-card shadow-lg p-5 rounded-4" style="max-width: 450px; width:100%;">
        <div class="text-center mb-4">
            <h2 class="fw-bold mb-1">Reset Password</h2>
            <p class="small">Enter your new password</p>
        </div>

        <form asp-action="ResetPassword" method="post" class="needs-validation" novalidate>
            <div class="mb-3">
                <label class="form-label fw-semibold">New Password</label>
                <input type="password" name="newPassword" class="form-control rounded-pill p-2" placeholder="New Password" required />
                <div class="invalid-feedback">Please enter a new password.</div>
            </div>

            <div class="mb-3">
                <label class="form-label fw-semibold">Confirm Password</label>
                <input type="password" name="confirmPassword" class="form-control rounded-pill p-2" placeholder="Confirm Password" required />
                <div class="invalid-feedback">Please confirm your password.</div>
            </div>

            <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-semibold">Reset Password</button>
        </form>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger mt-3 text-center rounded-pill py-2">@ViewBag.Error</div>
        }
    </div>
</div>
