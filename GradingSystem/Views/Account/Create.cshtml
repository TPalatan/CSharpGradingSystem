@model GradingSystem.Models.UserAccount

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - GradingSystem</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/login.css" rel="stylesheet" />
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            /* Background image */
            background: url('~/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .login-card {
            backdrop-filter: blur(12px); /* glass effect */
            background-color: rgba(255, 255, 255, 0.15); /* semi-transparent */
            border: 1px solid rgba(255, 255, 255, 0.25);
            color: #fff;
        }

            .login-card .form-control {
                background-color: rgba(255, 255, 255, 0.25);
                color: #fff;
                border: 1px solid rgba(255, 255, 255, 0.35);
            }

                .login-card .form-control::placeholder {
                    color: rgba(255, 255, 255, 0.7);
                }

            .login-card .form-label {
                color: #fff;
            }

        .btn-success {
            background-color: rgba(46, 204, 113, 0.85);
            border: none;
        }

            .btn-success:hover {
                background-color: rgba(46, 204, 113, 1);
            }

        .alert {
            background-color: rgba(255,255,255,0.25);
            border: none;
            color: #fff;
        }

        .text-primary {
            color: #fff !important;
        }

        .hover-link:hover {
            color: #d1f5d3 !important;
        }
    </style>
</head>
<body>
    <div class="login-page d-flex justify-content-center align-items-center vh-100">
        <div class="login-card shadow-lg p-4 rounded-4" style="max-width: 450px; width: 100%;">
            <div class="text-center mb-4">
                <h2 class="fw-bold text-white mb-1">Create Your Account ✨</h2>
                <p class="small text-white-50">Join the Grading System today</p>
            </div>

            <form asp-action="Create" method="post" class="needs-validation" novalidate>
                <!-- Email -->
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold">Email</label>
                    <input asp-for="Email" type="email" class="form-control rounded-pill p-2" placeholder="Enter your email address" required />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold">Password</label>
                    <input asp-for="Password" type="password" class="form-control rounded-pill p-2" placeholder="Enter your password" required />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <!-- Role -->
                <div class="mb-4">
                    <label asp-for="Role" class="form-label fw-semibold">Role</label>
                    <select asp-for="Role" class="form-select rounded-pill p-2" required>
                        <option value="">-- Select Role --</option>
                        <option value="User">Student</option>
                        <option value="Teacher">Teacher</option>
                        <option value="Admin">Admin</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger small"></span>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-semibold register-btn">
                    <i class="bi bi-person-plus-fill me-1"></i> Register
                </button>

                <!-- Login Redirect -->
                <div class="text-center mt-3">
                    <span class="small text-white-50">Already have an account?</span>
                    <a asp-action="Login" class="text-decoration-none fw-semibold hover-link">
                        Login here
                    </a>
                </div>
            </form>

            <!-- Error Message -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-4 text-center rounded-pill py-2">@ViewBag.Error</div>
            }

            <!-- Success Message -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-4 text-center rounded-pill py-2">@TempData["Success"]</div>
            }
        </div>
    </div>

    <!-- Bootstrap JS + Validation -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>
