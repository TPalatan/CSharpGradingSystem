@model GradingSystem.Models.UserAccount

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - GradingSystem</title>

    <!-- Google Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

    <!-- Custom CSS -->
    <link href="~/css/login.css" rel="stylesheet" />

    <style>
        body {
            font-family: 'Poppins', sans-serif;
            /* Background image */
            background: url('~/images/background.jpg') no-repeat center center fixed;
            background-size: cover;
        }

        .login-card {
            backdrop-filter: blur(12px); /* glass effect */
            background-color: rgba(255, 255, 255, 0.15); /* semi-transparent */
            border: 1px solid rgba(255, 255, 255, 0.25);
            color: #fff;
        }

            .login-card .form-control {
                background-color: rgba(255, 255, 255, 0.25);
                color: #fff;
                border: 1px solid rgba(255, 255, 255, 0.35);
            }

                .login-card .form-control::placeholder {
                    color: rgba(255, 255, 255, 0.7);
                }

            .login-card .form-label {
                color: #fff;
            }

        .btn-success {
            background-color: rgba(46, 204, 113, 0.85);
            border: none;
        }

            .btn-success:hover {
                background-color: rgba(46, 204, 113, 1);
            }

        .alert {
            background-color: rgba(255, 255, 255, 0.25);
            border: none;
            color: #fff;
        }

        .hover-link:hover {
            color: #d1f5d3 !important;
        }

        .text-secondary {
            color: rgba(255, 255, 255, 0.7) !important;
        }
    </style>
</head>
<body>
    <div class="login-page d-flex justify-content-center align-items-center vh-100">
        <div class="login-card shadow-lg p-5 rounded-4" style="max-width: 450px; width: 100%;">
            <div class="text-center mb-4">
                <h2 class="fw-bold mb-1">Welcome Back 👋</h2>
                <p class="small">Login to access your dashboard</p>
            </div>

            <form asp-action="Login" method="post" class="needs-validation" novalidate>
                <!-- Email -->
                <div class="mb-3">
                    <label for="email" class="form-label fw-semibold">Email</label>
                    <input type="email" name="email" id="email" class="form-control rounded-pill p-2" placeholder="Enter your email" required />
                    <div class="invalid-feedback">Please enter your email address.</div>
                </div>

                <!-- Password -->
                <div class="mb-3">
                    <label for="password" class="form-label fw-semibold">Password</label>
                    <input type="password" name="password" id="password" class="form-control rounded-pill p-2" placeholder="Enter your password" required />
                    <div class="invalid-feedback">Please enter your password.</div>
                </div>

                <!-- Submit -->
                <button type="submit" class="btn btn-success w-100 rounded-pill py-2 fw-semibold login-btn">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Login
                </button>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="ForgotPassword" class="text-decoration-none small hover-link">Forgot password?</a>
                    <a asp-action="Create" class="text-decoration-none small fw-semibold hover-link">Create account</a>
                </div>

            </form>

            <!-- Error message -->
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-4 text-center rounded-pill py-2">@ViewBag.Error</div>
            }

            <!-- Success message -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success mt-4 text-center rounded-pill py-2">@TempData["Success"]</div>
            }
        </div>
    </div>

    <!-- Bootstrap JS + Validation -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
</body>
</html>
