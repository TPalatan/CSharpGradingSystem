@model GradingSystem.Models.Teacher

@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    ViewData["Title"] = "Teacher Profile";
}

<link rel="stylesheet" href="~/css/studentProfile.css" />

<div class="teacher-profile-page">
    <div class="profile-header">
        <div class="profile-pic-container">
            <img src="@(!string.IsNullOrEmpty(Model.ProfilePicturePath) ? Model.ProfilePicturePath : "~/images/default-profile.jpg")"
                 alt="Profile Picture" class="profile-pic" id="profilePreview" />

            <form asp-action="UploadProfilePhoto" method="post" enctype="multipart/form-data">
                <label for="uploadPic" class="change-photo-label">Change Photo</label>
                <input type="file" id="uploadPic" name="profilePic" accept="image/*" onchange="previewProfile(event)" hidden>
                <button type="submit" class="btn btn-primary btn-sm mt-2">Upload</button>
            </form>
        </div>

        <div class="profile-info">
            <h2>@Model.FullName</h2>
            <p>@Model.Department | Trinidad Municipal College</p>
        </div>
    </div>

    <div class="profile-form-section">
        <h4>Personal Information</h4>
        <div class="profile-grid">
            <div class="form-group">
                <label>Email</label>
                <input type="text" value="@Model.UserAccount?.Email " readonly>
            </div>

            <div class="form-group">
                <label>Department</label>
                <input type="text" value="@Model.Department" readonly>
            </div>

            <div class="form-group">
                <label>Contact Number</label>
                <input type="text" value="@Model.ContactNumber" readonly>
            </div>

            <div class="form-group">
                <label>Status</label>
                <input type="text" value="@Model.Status" readonly>
            </div>

            <div class="form-group">
                <label>Subjects Assigned</label>
                <ul>
                    @if (Model.Subjects != null && Model.Subjects.Any())
                    {
                        foreach (var subj in Model.Subjects)
                        {
                            <li>@subj.SubjectName (@subj.SubjectCode)</li>
                        }
                    }
                    else
                    {
                        <li>No subjects assigned.</li>
                    }
                </ul>
            </div>
        </div>

        <h4>Account Security</h4>
        <div class="profile-grid">
            <div class="form-group">
                <label>Change Password</label>
                <input type="password" placeholder="Enter new password (optional)">
            </div>
        </div>

        <div class="form-actions">
            <button type="button" class="btn btn-success">Save Changes</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewProfile(event) {
            const output = document.getElementById('profilePreview');
            output.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}
