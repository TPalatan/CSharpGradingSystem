@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    ViewData["Title"] = "My Students";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Students</h2>

        <div class="d-flex gap-2">
            <input type="text" class="form-control" placeholder="Search student..." style="width: 250px;">
            <button class="btn btn-primary">
                <i data-lucide="search"></i> Search
            </button>
        </div>
    </div>

    <!-- Table -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Student List</h5>
            <span class="badge bg-light text-dark">Subject: Database Systems</span>
        </div>

        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>#</th>
                            <th>Student No.</th>
                            <th>Full Name</th>
                            <th>Course</th>
                            <th>Year Level</th>
                            <th>Section</th>
                            <th>Status</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>2021-00123</td>
                            <td>Juan Dela Cruz</td>
                            <td>BSIT</td>
                            <td>3rd Year</td>
                            <td>A</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td class="text-center">
                                <a asp-controller="Teacher" asp-action="ViewStudent" asp-route-id="1" class="btn btn-sm btn-outline-primary">
                                    <i data-lucide="eye"></i> View
                                </a>
                                <a asp-controller="Teacher" asp-action="Grades" asp-route-id="1" class="btn btn-sm btn-outline-success">
                                    <i data-lucide="clipboard"></i> Grades
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>2021-00124</td>
                            <td>Maria Santos</td>
                            <td>BSIT</td>
                            <td>3rd Year</td>
                            <td>A</td>
                            <td><span class="badge bg-success">Active</span></td>
                            <td class="text-center">
                                <a asp-controller="Teacher" asp-action="ViewStudent" asp-route-id="2" class="btn btn-sm btn-outline-primary">
                                    <i data-lucide="eye"></i> View
                                </a>
                                <a asp-controller="Teacher" asp-action="Grades" asp-route-id="2" class="btn btn-sm btn-outline-success">
                                    <i data-lucide="clipboard"></i> Grades
                                </a>
                            </td>
                        </tr>
                        <tr>
                            <td>3</td>
                            <td>2021-00125</td>
                            <td>Carlos Mendoza</td>
                            <td>BSBA</td>
                            <td>2nd Year</td>
                            <td>B</td>
                            <td><span class="badge bg-warning text-dark">Incomplete</span></td>
                            <td class="text-center">
                                <a asp-controller="Teacher" asp-action="ViewStudent" asp-route-id="3" class="btn btn-sm btn-outline-primary">
                                    <i data-lucide="eye"></i> View
                                </a>
                                <a asp-controller="Teacher" asp-action="Grades" asp-route-id="3" class="btn btn-sm btn-outline-success">
                                    <i data-lucide="clipboard"></i> Grades
                                </a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script> lucide.createIcons(); </script>
}
