@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">

    <!-- Banner Section -->
    <div id="teacherBanner" class="mb-5 position-relative overflow-hidden rounded shadow-sm">
        <div class="banner-slide active">
            <img src="~/images/Banner1.jpg" class="w-100 banner-img" alt="Banner 1">
        </div>
        <div class="banner-slide">
            <img src="~/images/Banner2.jpg" class="w-100 banner-img" alt="Banner 2">
        </div>
        <div class="banner-slide">
            <img src="~/images/Banner3.jpg" class="w-100 banner-img" alt="Banner 3">
        </div>

        <div class="banner-overlay d-flex flex-column justify-content-center align-items-start text-white px-5">
            <h1 class="fw-bold">Welcome Back, Teacher!</h1>
            <p class="lead">Manage your subjects, students, and grades all in one place.</p>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0">
                <i data-lucide="users" class="mb-2" style="width:30px; height:30px;"></i>
                <h5 class="card-title">My Students</h5>
                <p class="display-6 fw-bold text-primary">120</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0">
                <i data-lucide="book-open" class="mb-2" style="width:30px; height:30px;"></i>
                <h5 class="card-title">Subjects</h5>
                <p class="display-6 fw-bold text-success">5</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0">
                <i data-lucide="clipboard-list" class="mb-2" style="width:30px; height:30px;"></i>
                <h5 class="card-title">Pending Grades</h5>
                <p class="display-6 fw-bold text-warning">8</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0">
                <i data-lucide="check-circle" class="mb-2" style="width:30px; height:30px;"></i>
                <h5 class="card-title">Approved</h5>
                <p class="display-6 fw-bold text-info">15</p>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="card mt-5 shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Recent Activities</h5>
        </div>
        <div class="card-body">
            <ul class="list-group">
                <li class="list-group-item">You submitted grades for <b>BSIT 3A - Database Systems</b>.</li>
                <li class="list-group-item">New student added in <b>BSBA 2B</b>.</li>
                <li class="list-group-item">Report generated for <b>1st Semester, 2025</b>.</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();

        // Simple rotating banner script
        const slides = document.querySelectorAll('.banner-slide');
        let currentSlide = 0;

        setInterval(() => {
            slides[currentSlide].classList.remove('active');
            currentSlide = (currentSlide + 1) % slides.length;
            slides[currentSlide].classList.add('active');
        }, 4000);
    </script>
}

@section Styles {
    <style>
        /* Banner styling */
        #teacherBanner {
            height: 280px;
            position: relative;
            border-radius: 10px;
        }

        .banner-slide {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            opacity: 0;
            transition: opacity 1s ease-in-out;
        }

            .banner-slide.active {
                opacity: 1;
            }

        .banner-img {
            object-fit: cover;
            width: 100%;
            height: 280px;
        }

        .banner-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.4);
        }

            .banner-overlay h1, .banner-overlay p {
                text-shadow: 1px 1px 4px rgba(0,0,0,0.4);
            }
    </style>
}
