@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <!-- 🌅 Banner Section (Single Image Inline) -->
    <div id="teacherBanner" class="mb-5 position-relative overflow-hidden rounded shadow-sm"
         style="
        height: 340px;
        position: relative;
        border-radius: 16px;
        overflow: hidden;
        background: linear-gradient(rgba(0,0,0,0.55), rgba(0,0,0,0.55)),
                    url('/images/Banner1.jpg') center center / cover no-repeat;
        color: white;
    ">

        <div class="d-flex flex-column justify-content-center align-items-start h-100 px-5">
            <h1 class="fw-bold"
                style="font-size: 2.5rem; margin-bottom: 0.5rem; opacity: 0; transform: translateY(20px);
                   animation: fadeInUp 1s ease-out forwards;">
                Welcome Back, Teacher!
            </h1>
            <p class="lead"
               style="font-size: 1.2rem; opacity: 0; transform: translateY(20px);
                  animation: fadeInUp 1.5s ease-out forwards;">
                Manage your subjects, students, and grades all in one place.
            </p>
        </div>

        <style>
            @@keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(30px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }
        </style>
    </div>

    <!-- 📊 Dashboard Stats -->
    <div class="row g-4">
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0 stats-card">
                <div class="icon-wrapper bg-primary text-white mx-auto mb-2">
                    <i data-lucide="users"></i>
                </div>
                <h5 class="card-title">My Students</h5>
                <p class="display-6 fw-bold text-primary">120</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0 stats-card">
                <div class="icon-wrapper bg-success text-white mx-auto mb-2">
                    <i data-lucide="book-open"></i>
                </div>
                <h5 class="card-title">Subjects</h5>
                <p class="display-6 fw-bold text-success">5</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0 stats-card">
                <div class="icon-wrapper bg-warning text-dark mx-auto mb-2">
                    <i data-lucide="clipboard-list"></i>
                </div>
                <h5 class="card-title">Pending Grades</h5>
                <p class="display-6 fw-bold text-warning">8</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm text-center p-3 border-0 stats-card">
                <div class="icon-wrapper bg-info text-white mx-auto mb-2">
                    <i data-lucide="check-circle"></i>
                </div>
                <h5 class="card-title">Approved</h5>
                <p class="display-6 fw-bold text-info">15</p>
            </div>
        </div>
    </div>

    <!-- 🕓 Recent Activity -->
    <div class="card mt-5 shadow-sm border-0">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Recent Activities</h5>
        </div>
        <div class="card-body">
            <ul class="list-group list-group-flush">
                <li class="list-group-item">📘 You submitted grades for <b>BSIT 3A - Database Systems</b>.</li>
                <li class="list-group-item">👨‍🎓 New student added in <b>BSBA 2B</b>.</li>
                <li class="list-group-item">📄 Report generated for <b>1st Semester, 2025</b>.</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}

<!-- 👇 External CSS link -->
<link rel="stylesheet" href="~/css/teacher-dashboard.css" />
