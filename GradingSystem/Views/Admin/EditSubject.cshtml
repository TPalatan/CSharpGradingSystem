@model GradingSystem.Models.Subject

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit Subject";
}

<section class="edit-subject py-5">
    <div class="container">
        <div class="text-center mb-5">
            <h1 class="fw-bold text-dark">Edit Subject 📚</h1>
            <p class="text-secondary fs-6">Update subject details below.</p>
        </div>

        <form asp-action="EditSubject" method="post" class="row g-4 needs-validation" novalidate>
            <input type="hidden" asp-for="Id" />

            <!-- Subject Code -->
            <div class="col-md-6">
                <label asp-for="SubjectCode" class="form-label">Subject Code</label>
                <input asp-for="SubjectCode" class="form-control form-control-lg" required />
                <span asp-validation-for="SubjectCode" class="text-danger small"></span>
            </div>

            <!-- Subject Name -->
            <div class="col-md-6">
                <label asp-for="SubjectName" class="form-label">Subject Name</label>
                <input asp-for="SubjectName" class="form-control form-control-lg" required />
                <span asp-validation-for="SubjectName" class="text-danger small"></span>
            </div>

            <!-- Department -->
            <div class="col-md-6">
                <label asp-for="Department" class="form-label">Department</label>
                <select asp-for="Department" class="form-select form-select-lg" asp-items="ViewBag.Departments" required>
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Department" class="text-danger small"></span>
            </div>

            <!-- Assigned Teacher -->
            <div class="col-md-6">
                <label asp-for="AssignedTeacherId" class="form-label">Assigned Teacher</label>
                <select asp-for="AssignedTeacherId" class="form-select form-select-lg" asp-items="ViewBag.Teachers">
                    <option value="">-- Select Teacher --</option>
                </select>
                <span asp-validation-for="AssignedTeacherId" class="text-danger small"></span>
            </div>

            <!-- Units -->
            <div class="col-md-3">
                <label asp-for="Units" class="form-label">Units</label>
                <input asp-for="Units" class="form-control form-control-lg" type="number" min="1" required />
                <span asp-validation-for="Units" class="text-danger small"></span>
            </div>

            <!-- Semester -->
            <div class="col-md-3">
                <label asp-for="Semester" class="form-label">Semester</label>
                <select asp-for="Semester" class="form-select form-select-lg" asp-items="ViewBag.Semesters" required>
                    <option value="">-- Select Semester --</option>
                </select>
                <span asp-validation-for="Semester" class="text-danger small"></span>
            </div>

            <!-- Status -->
            <div class="col-md-3">
                <label asp-for="Status" class="form-label">Status</label>
                <select asp-for="Status" class="form-select form-select-lg" asp-items="ViewBag.Statuses">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="Status" class="text-danger small"></span>
            </div>


            <!-- Buttons -->
            <div class="col-12 mt-4 text-center">
                <button type="submit" class="btn btn-dark btn-lg px-5">
                    <i class="bi bi-save me-2"></i> Save Changes
                </button>
                <a asp-action="Subjects" class="btn btn-outline-secondary btn-lg ms-2">Cancel</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (() => {
            'use strict';
            const forms = document.querySelectorAll('.needs-validation');
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        })();
    </script>
}

@section Styles {
    <style>
        .form-label {
            font-weight: 500;
        }
        select.form-select, input.form-control {
            height: calc(2.5rem + 2px);
        }
    </style>
}
