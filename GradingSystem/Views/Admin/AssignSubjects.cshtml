@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Assign Subjects";
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">Assign Subjects to Students</h2>
        <button class="btn btn-success">
            <i data-lucide="save" class="me-1"></i> Save Assignments
        </button>
    </div>

    <!-- SEARCH STUDENT -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body d-flex flex-wrap align-items-center gap-3">
            <div class="input-group w-auto">
                <span class="input-group-text bg-white border-end-0">
                    <i data-lucide="search"></i>
                </span>
                <input type="text" class="form-control border-start-0" placeholder="Search student name or ID...">
            </div>

            <select class="form-select w-auto">
                <option>All Courses</option>
                <option>Bachelor of Education</option>
                <option>Bachelor of Science in IT</option>
                <option>Bachelor of Business Management</option>
            </select>
        </div>
    </div>

    <!-- STUDENT AND SUBJECT ASSIGNMENT -->
    <div class="row g-3">
        <!-- Student List -->
        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <strong>Students</strong>
                </div>
                <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                    <ul class="list-group">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Juan Dela Cruz</span>
                            <button class="btn btn-sm btn-outline-primary">Select</button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Maria Santos</span>
                            <button class="btn btn-sm btn-outline-primary">Select</button>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <span>Jose Ramirez</span>
                            <button class="btn btn-sm btn-outline-primary">Select</button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Subject Assignment -->
        <div class="col-md-8">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-header bg-primary text-white">
                    <strong>Available Subjects</strong>
                </div>
                <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th><input type="checkbox" /></th>
                                <th>Subject Code</th>
                                <th>Subject Name</th>
                                <th>Units</th>
                                <th>Semester</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>ENG101</td>
                                <td>English Communication 1</td>
                                <td>3</td>
                                <td>1st</td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>IT102</td>
                                <td>Introduction to Programming</td>
                                <td>4</td>
                                <td>1st</td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>MATH201</td>
                                <td>College Algebra</td>
                                <td>3</td>
                                <td>2nd</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script> lucide.createIcons(); </script>
}

<style>
    h2.fw-bold {
        letter-spacing: 0.5px;
    }

    .card {
        border-radius: 12px;
    }

    .list-group-item {
        border: none;
        border-bottom: 1px solid #eee;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f6ff;
    }

    .btn-outline-primary {
        padding: 3px 10px;
        font-size: 0.85rem;
    }
</style>
