@model GradingSystem.Models.DashboardViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Admin Dashboard";
}

<!-- Link the CSS -->
<link rel="stylesheet" href="~/css/admin-dashboard.css" />

<section class="dashboard-section">

    <!-- Banner -->
    <div class="dashboard-banner mb-4">
        <div class="banner-text">
            <h1>Welcome Back, Admin!</h1>
            <p>Here's a summary of your school's latest data</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="dashboard-cards">
        <a href="@Url.Action("Index", "Student")" class="card card-gradient bg-primary text-white">
            <div class="card-icon animate-icon"><i data-lucide="users"></i></div>
            <div class="card-info">
                <h5>Total Students</h5>
                <h2>@Model.TotalStudents</h2>
            </div>
        </a>

        <a href="@Url.Action("Index", "Teacher")" class="card card-gradient bg-success text-white">
            <div class="card-icon animate-icon"><i data-lucide="user-check"></i></div>
            <div class="card-info">
                <h5>Total Teachers</h5>
                <h2>@Model.TotalTeachers</h2>
            </div>
        </a>

        <a href="@Url.Action("Index", "Subject")" class="card card-gradient bg-warning text-white">
            <div class="card-icon animate-icon"><i data-lucide="book"></i></div>
            <div class="card-info">
                <h5>Total Subjects</h5>
                <h2>@Model.TotalSubjects</h2>
            </div>
        </a>

        <a href="@Url.Action("Index", "Course")" class="card card-gradient bg-info text-white">
            <div class="card-icon animate-icon"><i data-lucide="layers"></i></div>
            <div class="card-info">
                <h5>Total Courses</h5>
                <h2>@Model.TotalCourses</h2>
            </div>
        </a>
    </div>

    <!-- Recent Activity Table -->
    <div class="recent-activities mt-5">
        <h4>Recent Activities</h4>
        <table class="table table-hover align-middle shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Date</th>
                    <th>Activity</th>
                    <th>Performed By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var activity in Model.RecentActivities)
                {
                    <tr>
                        <td>@activity.Date.ToString("MMM dd, yyyy")</td>
                        <td>@activity.Description</td>
                        <td>@activity.PerformedBy</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</section>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
