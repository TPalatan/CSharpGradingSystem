@model IEnumerable<GradingSystem.Models.UserAccount>

@{
    ViewData["Title"] = "Pending Accounts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary mb-0">Pending Account Requests</h2>
        <a href="@Url.Action("Dashboard", "Admin")" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- ✅ Flash Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-x-circle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center rounded-3 py-3 shadow-sm">
            <i class="bi bi-info-circle me-2"></i>No pending accounts found.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm rounded-3 overflow-hidden">
            <table class="table table-hover align-middle bg-white mb-0">
                <thead class="table-primary">
                    <tr>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                        <th scope="col" class="text-center">Status</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@user.Email</td>
                            <td><span class="badge bg-secondary">@user.Role</span></td>
                            <td class="text-center">
                                @if (user.IsApproved)
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (user.IsPending)
                                {
                                    <span class="badge bg-warning text-dark">Pending</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Unknown</span>
                                }
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Approve", "Admin", new { id = user.Id })"
                                   class="btn btn-success btn-sm me-2 rounded-pill">
                                    <i class="bi bi-check-circle me-1"></i> Approve
                                </a>

                                <a href="@Url.Action("Reject", "Admin", new { id = user.Id })"
                                   class="btn btn-danger btn-sm rounded-pill"
                                   onclick="return confirm('Are you sure you want to reject this account?');">
                                    <i class="bi bi-x-circle me-1"></i> Reject
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
