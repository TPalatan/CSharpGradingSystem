@model IEnumerable<GradingSystem.Models.StudentSubjectAssignment>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Assign Subject to Student";
}

<div class="container-fluid">

    <h2 class="fw-bold text-primary mb-4">Assign Subject to Student</h2>

    <!-- TempData Messages -->
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <!-- ASSIGNMENT FORM -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <form asp-action="AssignSubject" method="post">
                <div class="row g-3">
                    <!-- Select Student -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Student</label>
                        <select name="studentId" class="form-select" required>
                            <option value="">Select Student</option>
                            @foreach (var student in ViewBag.Students)
                            {
                                <option value="@student.Id">@student.FullName (@student.StudentID)</option>
                            }
                        </select>
                    </div>

                    <!-- Select Subject -->
                    <div class="col-md-6">
                        <label class="form-label fw-semibold">Subject</label>
                        <select name="subjectId" class="form-select" required>
                            <option value="">Select Subject</option>
                            @foreach (var subject in ViewBag.Subjects)
                            {
                                <option value="@subject.Id">@subject.SubjectName</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i data-lucide="save" class="me-1"></i> Assign
                    </button>
                    <a href="@Url.Action("Subjects", "Admin")" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    </div>

    <!-- EXISTING ASSIGNMENTS GROUPED BY COURSE THEN YEAR LEVEL -->
    <div class="accordion" id="assignmentAccordion">
        @{
            var groupedByCourse = Model
            .GroupBy(a => a.Student.Course)
            .OrderBy(g => g.Key);
            int courseIndex = 0;
        }

        @foreach (var courseGroup in groupedByCourse)
        {
            courseIndex++;
            <div class="accordion-item mb-3 shadow-sm rounded">
                <h2 class="accordion-header" id="headingCourse@courseIndex">
                    <button class="accordion-button collapsed" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapseCourse@courseIndex"
                            aria-expanded="false"
                            aria-controls="collapseCourse@courseIndex">
                        @courseGroup.Key
                    </button>
                </h2>

                <div id="collapseCourse@courseIndex" class="accordion-collapse collapse"
                     aria-labelledby="headingCourse@courseIndex"
                     data-bs-parent="#assignmentAccordion">

                    <div class="accordion-body p-2">
                        @{
                            var groupedByYear = courseGroup
                            .GroupBy(a => a.Student.YearLevel)
                            .OrderBy(g => g.Key);
                            int yearIndex = 0;
                        }

                        @foreach (var yearGroup in groupedByYear)
                        {
                            yearIndex++;
                            <div class="card mb-3 border-0 shadow-sm">
                                <div class="card-header bg-light fw-semibold">
                                    Year Level: @yearGroup.Key (@yearGroup.Count() assignments)
                                </div>
                                <div class="card-body p-0">
                                    <table class="table table-hover align-middle text-nowrap mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>#</th>
                                                <th>Student</th>
                                                <th>Subject</th>
                                                <th class="text-center">Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int index = 1;
                                            }
                                            @foreach (var assignment in yearGroup)
                                            {
                                                <tr>
                                                    <td>@index</td>
                                                    <td>@assignment.Student.FullName (@assignment.Student.StudentID)</td>
                                                    <td>@assignment.Subject.SubjectName</td>
                                                    <td class="text-center">
                                                        <a class="btn btn-sm btn-outline-danger"
                                                           title="Delete"
                                                           href="@Url.Action("DeleteAssignment", "Admin", new { id = assignment.Id })"
                                                           onclick="return confirm('Are you sure you want to delete this assignment?');">
                                                            <i data-lucide="trash-2"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                                index++;
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>

</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}

<style>
    h2.fw-bold {
        letter-spacing: 0.5px;
    }

    .card, .accordion-item {
        border-radius: 12px;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f6ff;
    }

    .btn-outline-danger i {
        width: 16px;
        height: 16px;
    }

    .form-select {
        border-radius: 8px;
    }

    .card-header {
        font-size: 15px;
    }
</style>
