@model IEnumerable<GradingSystem.Models.Teacher>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Teachers";
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Teacher Records</h2>
        <a asp-action="CreateTeacher" class="btn btn-primary">
            <i data-lucide="user-plus" class="me-1"></i> Add New Teacher
        </a>
    </div>

    <!-- SEARCH BAR -->
    <div class="card mb-4 shadow-sm border-0">
        <div class="card-body d-flex align-items-center gap-3 flex-wrap">
            <div class="input-group w-auto">
                <span class="input-group-text bg-white border-end-0"><i data-lucide="search"></i></span>
                <input type="text" class="form-control border-start-0" placeholder="Search teacher name..." disabled>
            </div>
            <select class="form-select w-auto" disabled>
                <option>All Departments</option>
                <option>College of Education</option>
                <option>College of Information Technology</option>
                <option>College of Business</option>
            </select>
        </div>
    </div>

    <!-- TEACHER TABLE -->
    <div class="card shadow-sm border-0">
        <div class="card-body">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">@TempData["SuccessMessage"]</div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
            }

            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>#</th>
                        <th>Teacher Name</th>
                        <th>Department</th>
                        <th>Email</th>
                        <th>Contact</th>
                        <th>Status</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        int i = 1;
                        foreach (var teacher in Model)
                        {
                            <tr>
                                <td>@i</td>
                                <td>@teacher.FullName</td>
                                <td>@teacher.Department</td>
                                <td>@teacher.Email</td>
                                <td>@teacher.ContactNumber</td>
                                <td>
                                    @if (teacher.Status == "Active")
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td class="text-center">
                                    <a asp-action="EditTeacher" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                        <i data-lucide="edit"></i>
                                    </a>
                                    <a asp-action="DeleteTeacher" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-danger" title="Delete"
                                       onclick="return confirm('Are you sure you want to delete this teacher?');">
                                        <i data-lucide="trash"></i>
                                    </a>
                                </td>
                            </tr>
                            i++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-3">
                                No teacher records found.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}

<style>
    h2.fw-bold {
        letter-spacing: 0.5px;
    }

    .card {
        border-radius: 12px;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f6ff;
    }

    .btn-outline-primary i,
    .btn-outline-warning i,
    .btn-outline-danger i {
        width: 16px;
        height: 16px;
    }

    .badge {
        font-size: 0.8rem;
    }

    .btn {
        border-radius: 8px;
    }
</style>
