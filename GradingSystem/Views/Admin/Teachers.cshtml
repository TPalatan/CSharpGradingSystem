@model IEnumerable<GradingSystem.Models.Teacher>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Teachers";

    // Group teachers by Department
    var groupedTeachers = Model?
        .GroupBy(t => t.Department)
        .ToDictionary(g => g.Key, g => g.ToList());
}

<div class="container-fluid">

    <!-- HEADER -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-dark">Teacher Records</h2>
        <a asp-action="CreateTeacher" class="btn btn-primary">
            <i data-lucide="user-plus" class="me-1"></i> Add New Teacher
        </a>
    </div>

    @if (groupedTeachers != null && groupedTeachers.Any())
    {
        @foreach (var deptGroup in groupedTeachers)
        {
            <h4 class="text-secondary mt-4">@deptGroup.Key</h4>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-body p-0">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success m-3">@TempData["SuccessMessage"]</div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger m-3">@TempData["ErrorMessage"]</div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Teacher Name</th>
                                    <th>Department</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int i = 1;
                                    foreach (var teacher in deptGroup.Value)
                                    {
                                        <tr>
                                            <td>@i</td>
                                            <td>@teacher.FullName</td>
                                            <td>@teacher.Department</td>
                                            <td>@teacher.Email</td>
                                            <td>@teacher.ContactNumber</td>
                                            <td>
                                                @if (teacher.Status == "Active")
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </td>
                                            <td class="text-center">
                                                <a asp-action="EditTeacher" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-warning me-1" title="Edit">
                                                    <i data-lucide="edit"></i>
                                                </a>
                                                <a asp-action="DeleteTeacher" asp-route-id="@teacher.Id" class="btn btn-sm btn-outline-danger" title="Delete"
                                                   onclick="return confirm('Are you sure you want to delete this teacher?');">
                                                    <i data-lucide="trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                        i++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="text-center text-muted py-3">No teacher records found.</div>
    }
</div>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}

<style>
    h2.fw-bold, h4.text-secondary {
        letter-spacing: 0.5px;
    }

    .card {
        border-radius: 12px;
    }

    .table-hover tbody tr:hover {
        background-color: #f0f6ff;
    }

    .btn-outline-primary i,
    .btn-outline-warning i,
    .btn-outline-danger i {
        width: 16px;
        height: 16px;
    }

    .badge {
        font-size: 0.8rem;
    }

    .btn {
        border-radius: 8px;
    }

    table th, table td {
        white-space: nowrap;
    }

    .card-body {
        overflow-x: auto;
    }
</style>
