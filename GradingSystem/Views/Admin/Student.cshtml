@model IEnumerable<GradingSystem.Models.Student>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Student Records";
}

<section class="student-records py-4">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold text-primary">Student Records</h2>
            <a asp-action="CreateStudent" class="btn btn-success">
                <i class="bi bi-person-plus-fill me-1"></i> Add New Student
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>ID</th>
                            <th>Full Name</th>
                            <th>Course</th>
                            <th>Year Level</th>
                            <th>Status</th>
                            <th>User Account</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var student in Model)
                            {
                                <tr>
                                    <td>@student.StudentID</td>
                                    <td>@student.FullName</td>
                                    <td>@student.Course</td>
                                    <td>@student.YearLevel</td>
                                    <td>
                                        @if (student.Status == "Active")
                                        {
                                            <span class="badge bg-success">Active</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactive</span>
                                        }
                                    </td>
                                    <td>@student.UserAccount?.Username</td> <!-- Removed "None" -->
                                    <td>
                                        <a asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-sm btn-outline-warning me-1">
                                            <i class="bi bi-pencil-square"></i> Edit
                                        </a>
                                        <a asp-action="DeleteStudent" asp-route-id="@student.Id"
                                           onclick="return confirm('Are you sure you want to delete this student?');"
                                           class="btn btn-sm btn-outline-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">No students found.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .student-records h2 {
            letter-spacing: 0.5px;
        }

        .card {
            border-radius: 12px;
        }

        .table-hover tbody tr:hover {
            background-color: #f0f6ff;
        }

        .badge {
            font-size: 0.85rem;
            padding: 5px 10px;
            border-radius: 12px;
        }

        .btn i {
            margin-right: 3px;
        }

        .btn-outline-warning:hover {
            background-color: #ffc107;
            color: #fff;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

        td:empty {
            background-color: #f8f9fa;
            color: #999;
            text-align: center;
        }
    </style>
}
