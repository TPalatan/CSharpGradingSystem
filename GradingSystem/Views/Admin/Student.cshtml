@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Student Records";
}

<section class="student-records-section">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">Student Records</h2>
        <button class="btn btn-primary">
            <i data-lucide="user-plus"></i> Add New Student
        </button>
    </div>

    <!-- Search and Filter -->
    <div class="search-filter mb-3 d-flex flex-wrap gap-2 align-items-center">
        <div class="input-group w-auto">
            <span class="input-group-text bg-white border-end-0"><i data-lucide="search"></i></span>
            <input type="text" class="form-control border-start-0" placeholder="Search by name or ID...">
        </div>
        <select class="form-select w-auto">
            <option selected>All Courses</option>
            <option>BSIT</option>
            <option>BSED</option>
            <option>BEED</option>
        </select>
        <select class="form-select w-auto">
            <option selected>All Years</option>
            <option>1st Year</option>
            <option>2nd Year</option>
            <option>3rd Year</option>
            <option>4th Year</option>
        </select>
        <button class="btn btn-outline-secondary">
            <i data-lucide="filter"></i> Filter
        </button>
    </div>

    <!-- Student Table -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Student ID</th>
                        <th>Full Name</th>
                        <th>Course</th>
                        <th>Year Level</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>2025-0001</td>
                        <td>Maria Dela Cruz</td>
                        <td>BSIT</td>
                        <td>3rd Year</td>
                        <td><span class="badge bg-success">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary"><i data-lucide="eye"></i></button>
                            <button class="btn btn-sm btn-outline-warning"><i data-lucide="edit"></i></button>
                            <button class="btn btn-sm btn-outline-danger"><i data-lucide="trash-2"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>2025-0002</td>
                        <td>Juan Santos</td>
                        <td>BSED</td>
                        <td>2nd Year</td>
                        <td><span class="badge bg-success">Active</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary"><i data-lucide="eye"></i></button>
                            <button class="btn btn-sm btn-outline-warning"><i data-lucide="edit"></i></button>
                            <button class="btn btn-sm btn-outline-danger"><i data-lucide="trash-2"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>2025-0003</td>
                        <td>Ana Lopez</td>
                        <td>BEED</td>
                        <td>1st Year</td>
                        <td><span class="badge bg-secondary">Inactive</span></td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary"><i data-lucide="eye"></i></button>
                            <button class="btn btn-sm btn-outline-warning"><i data-lucide="edit"></i></button>
                            <button class="btn btn-sm btn-outline-danger"><i data-lucide="trash-2"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

</section>

@section Styles {
    <style>
        .student-records-section {
            padding: 25px;
            background-color: #f9fafc;
        }

        .page-title {
            font-weight: 700;
            color: #002b5b;
        }

        .search-filter .input-group {
            border-radius: 8px;
            overflow: hidden;
        }

        .search-filter input {
            border-color: #ced4da;
            box-shadow: none !important;
        }

        .search-filter select,
        .search-filter button {
            border-radius: 8px;
        }

        table th {
            color: #495057;
            font-weight: 600;
        }

        table td {
            color: #555;
        }

        .card {
            border-radius: 15px;
        }

        .btn i {
            width: 18px;
            height: 18px;
        }

        .btn-outline-primary:hover {
            background-color: #002b5b;
            color: white;
        }

        .badge {
            padding: 6px 10px;
            font-size: 0.85rem;
        }
    </style>
}

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
