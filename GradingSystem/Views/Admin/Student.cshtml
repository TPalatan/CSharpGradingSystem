@model IEnumerable<GradingSystem.Models.Student>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Student Records";
}

<section class="student-records-section">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="page-title">Student Records</h2>
        <a asp-action="CreateStudent" class="btn btn-primary">
            <i data-lucide="user-plus"></i> Add New Student
        </a>
    </div>

    <!-- ✅ Success Message -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show rounded-pill py-2" role="alert">
            <i data-lucide="check-circle" class="me-1"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Search and Filter -->
    <div class="search-filter mb-3 d-flex flex-wrap gap-2 align-items-center">
        <div class="input-group w-auto">
            <span class="input-group-text bg-white border-end-0">
                <i data-lucide="search"></i>
            </span>
            <input type="text" class="form-control border-start-0" placeholder="Search by name or ID...">
        </div>

        <select class="form-select w-auto">
            <option selected>All Courses</option>
            <option>BSIT</option>
            <option>BSED</option>
            <option>BEED</option>
        </select>

        <select class="form-select w-auto">
            <option selected>All Years</option>
            <option>1st Year</option>
            <option>2nd Year</option>
            <option>3rd Year</option>
            <option>4th Year</option>
        </select>

        <button class="btn btn-outline-secondary">
            <i data-lucide="filter"></i> Filter
        </button>
    </div>

    <!-- Student Table -->
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Student ID</th>
                        <th>Full Name</th>
                        <th>Course</th>
                        <th>Year Level</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.StudentID</td>
                                <td>@student.FullName</td>
                                <td>@student.Course</td>
                                <td>@student.YearLevel</td>
                                <td>
                                    @if (student.Status == "Active")
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactive</span>
                                    }
                                </td>
                                <td>
                                  
                                    <a asp-action="Edit" asp-route-id="@student.Id" class="btn btn-sm btn-outline-warning">
                                        <i data-lucide="edit"></i>
                                    </a>
                                    <a asp-action="DeleteStudent" asp-route-id="@student.Id"
                                       onclick="return confirm('Are you sure you want to delete this student?');"
                                       class="btn btn-sm btn-outline-danger">
                                        <i data-lucide="trash-2"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted py-4">No students found.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</section>

@section Styles {
    <style>
        .student-records-section {
            padding: 25px;
            background-color: #f9fafc;
        }

        .page-title {
            font-weight: 700;
            color: #002b5b;
        }

        .search-filter .input-group {
            border-radius: 8px;
            overflow: hidden;
        }

        .search-filter input {
            border-color: #ced4da;
            box-shadow: none !important;
        }

        .search-filter select,
        .search-filter button {
            border-radius: 8px;
        }

        table th {
            color: #495057;
            font-weight: 600;
        }

        table td {
            color: #555;
        }

        .card {
            border-radius: 15px;
        }

        .btn i {
            width: 18px;
            height: 18px;
        }

        .btn-outline-primary:hover {
            background-color: #002b5b;
            color: white;
        }

        .badge {
            padding: 6px 10px;
            font-size: 0.85rem;
        }
    </style>
}

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
