@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- Bootstrap & CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    @RenderSection("Styles", required: false)
</head>
<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="sidebar-logo text-center mb-4">
            <img src="~/images/Tmc.png" alt="Logo" class="logo-img mb-2" />
            <h4>Admin Panel</h4>
        </div>

        <div class="sidebar-links">
            <a asp-controller="Admin" asp-action="Dashboard" class="@(currentController == "Admin" && currentAction == "Dashboard" ? "active" : "")">
                <i data-lucide="home"></i>
                <span>Dashboard</span>
            </a>
            <a asp-controller="Admin" asp-action="Student" class="@(currentController == "Admin" && currentAction == "Student" ? "active" : "")">
                <i data-lucide="users"></i>
                <span>Student Records</span>
            </a>
            <a asp-controller="Admin" asp-action="Subjects" class="@(currentController == "Admin" && currentAction == "Subjects" ? "active" : "")">
                <i data-lucide="book-open"></i>
                <span>Subjects</span>
            </a>
            <a asp-controller="Admin" asp-action="PendingAccounts" class="@(currentController == "Admin" && currentAction == "PendingAccounts" ? "active" : "")">
                <i data-lucide="user-plus"></i>
                <span>Pending Accounts</span>
            </a>
            <a asp-controller="Admin" asp-action="StudentGrades" class="@(currentController == "Registrar" && currentAction == "Grades" ? "active" : "")">
                <i data-lucide="clipboard-list"></i>
                <span>Grades</span>
            </a>
            <a asp-controller="Admin" asp-action="AssignSubject" class="@(currentController == "Admin" && currentAction == "AssignSubject" ? "active" : "")">
                <i data-lucide="file-text"></i>
                <span>Student Subjects</span>
            </a>
            <a asp-controller="Admin" asp-action="Teachers" class="@(currentController == "Admin" && currentAction == "Teachers" ? "active" : "")">
                <i data-lucide="user-check"></i>
                <span>Teachers</span>
            </a>
            <a asp-controller="Account" asp-action="Logout" class="logout">
                <i data-lucide="log-out"></i>
                <span>Logout</span>
            </a>
        </div>
    </div>

    <!-- TOP NAVBAR -->
    <div class="top-navbar">
        <div class="d-flex justify-content-between align-items-center w-100 px-4">
            <span class="navbar-brand mb-0 h5 text-light">Trinidad Municipal College - Admin</span>
            <div class="user-info d-flex align-items-center">
                <i data-lucide="user" class="me-2"></i>
                <span>Hello, Admin</span>
            </div>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        <main role="main" class="p-4">
            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="footer-content">
            <div class="footer-inner d-flex justify-content-between align-items-center px-4 py-3">
                <p class="mb-0">&copy; 2025 Trinidad Municipal College - All Rights Reserved.</p>
                <div class="social-icons">
                    <a href="https://facebook.com" target="_blank"><i data-lucide="facebook"></i></a>
                    <a href="https://youtube.com" target="_blank"><i data-lucide="youtube"></i></a>
                    <a href="https://twitter.com" target="_blank"><i data-lucide="twitter"></i></a>
                </div>
            </div>
        </footer>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script> lucide.createIcons(); </script>

    @RenderSection("Scripts", required: false)

</body>

<style>
    /* === SIDEBAR === */
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        width: 240px;
        background: #ffffff;
        color: #212529;
        display: flex;
        flex-direction: column;
        padding-top: 20px;
        box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
    }

    .sidebar-logo h4 {
        color: #0d6efd;
        font-weight: 600;
        margin-top: 10px;
    }

    .sidebar a {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 20px;
        color: #212529;
        text-decoration: none;
        font-weight: 500;
        border-radius: 6px;
        transition: all 0.3s ease;
        position: relative;
    }

        .sidebar a.active {
            background: #f1f3f5;
            color: #0d6efd;
        }

            .sidebar a.active::before {
                content: "";
                position: absolute;
                left: 0;
                top: 0;
                width: 4px;
                height: 100%;
                background-color: #0d6efd;
                border-radius: 0 4px 4px 0;
            }

        .sidebar a:hover {
            background: #f1f3f5;
            color: #0d6efd;
        }

        .sidebar a.logout {
            margin-top: auto;
            border-top: 1px solid #e9ecef;
            padding-top: 15px;
            color: #dc3545;
        }

            .sidebar a.logout:hover {
                background: #f8d7da;
                color: #b02a37;
            }

    /* === TOP NAVBAR === */
    .top-navbar {
        position: fixed;
        left: 240px;
        right: 0;
        top: 0;
        height: 60px;
        background: #004080;
        color: #fff;
        display: flex;
        align-items: center;
        z-index: 1000;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    }

    /* === MAIN CONTENT === */
    .main-content {
        margin-left: 240px;
        margin-top: 60px;
        background-color: #f8f9fc;
        min-height: calc(100vh - 60px);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    /* === FOOTER === */
    .footer-content {
        background: #fff;
        border-top: 1px solid #dee2e6;
        color: #333;
    }

    .social-icons a {
        color: #004080;
        margin-left: 10px;
        text-decoration: none;
    }

        .social-icons a:hover {
            color: #007bff;
        }
</style>
</html>
