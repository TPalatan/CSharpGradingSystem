@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Teacher Panel</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />

    <script src="https://unpkg.com/lucide@latest"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- SIDEBAR -->
    <div class="sidebar">
        <div class="sidebar-logo text-center">
            <img src="~/images/Tmc.png" alt="Logo" class="logo-img" />
            <h4>Teacher Panel</h4>
        </div>

        <div class="sidebar-links">
            <a asp-controller="Teacher" asp-action="Dashboard" class="active">
                <i data-lucide="home"></i><span>Dashboard</span>
            </a>
            <a asp-controller="Teacher" asp-action="Students">
                <i data-lucide="users"></i><span>My Students</span>
            </a>
            <a asp-controller="Teacher" asp-action="Subjects">
                <i data-lucide="book-open"></i><span>Subjects</span>
            </a>
            <a asp-controller="Teacher" asp-action="Grades">
                <i data-lucide="clipboard-list"></i><span>Grades</span>
            </a>
            <a asp-controller="Teacher" asp-action="Reports">
                <i data-lucide="file-text"></i><span>Reports</span>
            </a>
            <a asp-controller="Account" asp-action="Logout" class="logout">
                <i data-lucide="log-out"></i><span>Logout</span>
            </a>
        </div>
    </div>

    <!-- TOP NAVBAR -->
    <div class="top-navbar">
        <div class="d-flex justify-content-between align-items-center w-100 px-4">
            <span class="navbar-brand mb-0 h5 text-light">Trinidad Municipal College - Teacher</span>
            <div class="user-info d-flex align-items-center">
                <i data-lucide="user" class="me-2"></i>
                <span>Hello, Teacher</span>
            </div>
        </div>
    </div>

    <!-- MAIN CONTENT -->
    <div class="main-content">
        <main role="main" class="p-4">
            @RenderBody()
        </main>

        <!-- FOOTER -->
        <footer class="footer-content">
            <div class="footer-inner d-flex justify-content-between align-items-center px-4 py-3">
                <p class="mb-0">&copy; 2025 Trinidad Municipal College - All Rights Reserved.</p>
                <div class="social-icons">
                    <a href="https://facebook.com" target="_blank"><i data-lucide="facebook"></i></a>
                    <a href="https://youtube.com" target="_blank"><i data-lucide="youtube"></i></a>
                    <a href="https://twitter.com" target="_blank"><i data-lucide="twitter"></i></a>
                </div>
            </div>
        </footer>
    </div>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script> lucide.createIcons(); </script>

    @RenderSection("Scripts", required: false)
</body>

<style>
    .sidebar {
        position: fixed;
        left: 0;
        top: 0;
        bottom: 0;
        width: 240px;
        background: #002b5b;
        color: #fff;
        display: flex;
        flex-direction: column;
        padding-top: 20px;
    }

    .sidebar-logo img {
        width: 80px;
        margin-bottom: 10px;
    }

    .sidebar-links {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .sidebar a {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 10px 20px;
        color: #ddd;
        text-decoration: none;
        transition: 0.3s;
    }

        .sidebar a:hover, .sidebar a.active {
            background: #004080;
            color: #fff;
        }

    .top-navbar {
        position: fixed;
        left: 240px;
        right: 0;
        top: 0;
        height: 60px;
        background: #004080;
        color: #fff;
        display: flex;
        align-items: center;
        z-index: 1000;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.15);
    }

    .main-content {
        margin-left: 240px;
        margin-top: 60px;
        background-color: #f8f9fc;
        min-height: calc(100vh - 60px);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
</style>
</html>
