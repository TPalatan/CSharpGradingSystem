@model List<GradingSystem.Models.Subject>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Subjects";
}

<div class="subject-page">
    <!-- Header -->
    <div class="subject-header">
        <h2><i data-lucide="book-open"></i> Subjects for @ViewBag.StudentName</h2>
        <p>Manage and view all your enrolled and completed subjects.</p>
    </div>

    <!-- Filter and Search -->
    <div class="subject-filters">
        <input type="text" placeholder="Search subject..." class="search-input" />
        <select class="filter-select">
            <option value="all">All</option>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
        </select>
    </div>

    <!-- Subject List -->
    <div class="subject-list">
        @if (Model != null && Model.Any())
        {
            foreach (var subject in Model)
            {
                var statusClass = subject.Status?.ToLower() ?? "inactive"; // Active/Inactive
                                                                           <div class="subject-card">
                                                                               <div class="subject-info">
                                                                                   <h3>@subject.SubjectName</h3>
                                                                                   <p><strong>Code:</strong> @subject.SubjectCode</p>
                                                                                   <p><strong>Instructor:</strong> @subject.AssignedTeacher?.FullName</p>
                                                                                   <p><strong>Units:</strong> @subject.Units</p>
                                                                                   <p><strong>Semester:</strong> @subject.Semester</p>
                                                                               </div>
                                                                               <div class="subject-status @statusClass">@subject.Status</div>
                                                                           </div>
            }
        }
        else
        {
            <p>No subjects found for this student.</p>
        }
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/subjects.css" asp-append-version="true" />
}
