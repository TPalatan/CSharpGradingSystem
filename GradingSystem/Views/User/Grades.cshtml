@model IEnumerable<GradingSystem.Models.Grade>

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "My Grades";
}

<div class="grades-page">
    <div class="grades-header">
        <h2><i data-lucide="book-open"></i> My Grades</h2>
        <p>Here’s your performance for this semester.</p>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="card shadow-sm grades-table-card">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i data-lucide="list"></i> Subject Grades</h5>
                <span class="fw-light" style="font-size: 14px;">Current Semester</span>
            </div>

            <div class="card-body p-0">
                <table class="table table-hover table-bordered grades-table mb-0 text-center">
                    <thead class="table-primary">
                        <tr>
                            <th>Subject Code</th>
                            <th>Subject Name</th>
                            <th>Prelim</th>
                            <th>Midterm</th>
                            <th>Semi-Final</th>
                            <th>Final</th>
                            <th>Final Grade</th>
                          
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var grade in Model)
                        {
                            double? finalGrade = grade.FinalGrade;
                            string status = finalGrade.HasValue
                            ? (finalGrade.Value >= 75 ? "Passed" : "Failed")
                            : "In Progress";

                            string statusClass = status == "Passed" ? "passed"
                            : status == "Failed" ? "failed"
                            : "inprogress";

                            <tr>
                                <td>@grade.Subject?.SubjectCode</td>
                                <td>@grade.Subject?.SubjectName</td>
                                <td>@(grade.Prelim?.ToString("0.##") ?? "-")</td>
                                <td>@(grade.Midterm?.ToString("0.##") ?? "-")</td>
                                <td>@(grade.SemiFinal?.ToString("0.##") ?? "-")</td>
                                <td>@(grade.Final?.ToString("0.##") ?? "-")</td>
                                <td><strong>@(grade.FinalGrade?.ToString("0.##") ?? "-")</strong></td>
                               
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p class="text-center text-muted mt-5">No grades available yet.</p>
    }
</div>

<style>
    .grades-page {
        max-width: 1000px;
        margin: 40px auto;
        font-family: 'Segoe UI', sans-serif;
        color: #333;
    }

    .grades-header {
        text-align: center;
        margin-bottom: 25px;
    }

        .grades-header h2 {
            color: #007bff;
            font-weight: 600;
            margin-bottom: 5px;
        }

        .grades-header p {
            color: #6c757d;
            font-size: 15px;
        }

    .grades-table th {
        background-color: #007bff !important;
        color: white;
        font-weight: 600;
    }

    .grades-table td {
        vertical-align: middle;
    }

    .status {
        padding: 5px 12px;
        border-radius: 8px;
        font-weight: 600;
        font-size: 14px;
        display: inline-block;
    }

        .status.passed {
            background-color: #d4edda;
            color: #155724;
        }

        .status.failed {
            background-color: #f8d7da;
            color: #721c24;
        }

        .status.inprogress {
            background-color: #fff3cd;
            color: #856404;
        }
</style>

@section Scripts {
    <script>
        lucide.createIcons();
    </script>
}
