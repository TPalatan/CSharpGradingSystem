@model GradingSystem.Models.Student

@{
    Layout = "~/Views/Shared/_UserLayout.cshtml";
    ViewData["Title"] = "Student Profile";
}

<link rel="stylesheet" href="~/css/studentProfile.css" />

<div class="student-profile-page">
    <div class="profile-header">
        <div class="profile-pic-container">
            <img src="@(!string.IsNullOrEmpty(Model.ProfilePicturePath) ? Model.ProfilePicturePath : "~/images/default-profile.jpg")"
                 alt="Profile Picture" class="profile-pic" id="profilePreview" />

            <form asp-action="UploadProfilePhoto" method="post" enctype="multipart/form-data">
                <label for="uploadPic" class="change-photo-label">Change Photo</label>
                <input type="file" id="uploadPic" name="profilePic" accept="image/*" onchange="previewProfile(event)" hidden>
                <button type="submit" class="btn btn-primary btn-sm mt-2">Upload</button>
            </form>
        </div>

        <div class="profile-info">
            <h2>@Model.FullName</h2>
            <p>@Model.Course - @Model.YearLevel | Department of Technology</p>
        </div>
    </div>

    <div class="profile-form-section">
        <h4>Personal Information</h4>
        <div class="profile-grid">
            <div class="form-group">
                <label>LRN / Student ID</label>
                <input type="text" value="@Model.StudentID" readonly>
            </div>

            <div class="form-group">
                <label>Course</label>
                <input type="text" value="@Model.Course" readonly>
            </div>

           
            <div class="form-group">
                <label>Year Level</label>
                <input type="text" value="@Model.YearLevel" readonly>
            </div>

            <div class="form-group">
                <label>Status</label>
                <input type="text" value="@Model.Status" readonly>
            </div>
        </div>

        <h4>Account Security</h4>
        <div class="profile-grid">
            <div class="form-group">
                <label>Email</label>
                <input type="text" value="@Model.UserAccount?.Email" readonly>
            </div>
            <div class="form-group">
                <label>Change Password</label>
                <input type="password" placeholder="Enter new password (optional)">
            </div>
        </div>

        <div class="form-actions">
            <button type="button" class="btn btn-success">Save Changes</button>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function previewProfile(event) {
            const output = document.getElementById('profilePreview');
            output.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>
}
